#construction.xml
<construction>
  <sample>
    <flaws>
      <flaw>IDOR SQL</flaw>
    </flaws>
    <path>
      <dir>non_prepared_query</dir>
      <dir>no_right_verification</dir>
    </path>
    <comment>construction : no right verification</comment>
    <codes>
      <code>$query = "SELECT * FROM COURSE where id=' $checked_data '";</code>
    </codes>
    <safety safe = "0"/>
    <constraint prepared = "0"/>
    <relevancy>1</relevancy>
  </sample>
  <sample>
    <flaws>
      <flaw>IDOR SQL</flaw>
    </flaws>
    <path>
      <dir>non_prepared_query</dir>
      <dir>no_right_verification</dir>
    </path>
    <comment>construction : no right verification</comment>
    <codes>
      <code>$query = "SELECT * FROM COURSE where id=' $checked_data '";</code>
      <code>echo $query;</code>
    </codes>
    <safety safe = "0"/>
    <constraint prepared = "0"/>
    <relevancy>1</relevancy>
  </sample>
</construction>

