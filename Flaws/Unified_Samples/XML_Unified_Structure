#sanitize.xml
<sanitize>
  <sample>
    <flaws>
      <flaw>IDOR</flaw>
    </flaws>
    <path>
      <dir>CAST</dir>
    </path>
    <comment>sanitize : cast into int</comment>
    <codes>
      <code>$checked_data =  (int) $tainted;</code>
      <code>echp $checked_data;</code>
    </codes>
    <safety safe = "0"/>
    <constraint block = "0"/>
    <relevancy>1</relevancy>
  </sample>
